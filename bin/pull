#!/bin/bash

#IMAGE_NAME="busybox"
#TAG="latest"
. ./services/${1}.env
function pull_image() {
    image_name=$1
    image_tag=$2
    id=`docker images | grep $image_name | grep $image_tag | head -n 1 | awk '{print $3}'` 
    if [ -z $id ]; then
	echo "prepare docker image $image_name:$image_tag"
	docker pull $image_name:$image_tag
    fi
}

pull_image $IMAGE_NAME $TAG
